{
  "name": "kni-cascade",
  "version": "8.0.0",
  "description": "KNI Cascade — an opinionated SCSS engine and single source of truth for design scaling.",
  "main": "scss",
  "engines": {
    "node": ">=18 <=22",
    "npm": ">=8 <=10"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run gulp-build",
    "deploy": "npm run stylelint && npm run build",
    "gulp": "gulp",
    "gulp-build": "gulp build-sass",
    "http-server": "http-server",
    "serve": "cd test && npm run http-server",
    "prettier": "npx prettier --write .",
    "stylelint": "npx stylelint \"**/*.{css,sass,scss}\" --fix",
    "prepare": "husky install && npm run husky:init",
    "husky:init": "test -f .husky/pre-commit || npm run husky:create",
    "husky:create": "npx husky add .husky/pre-commit \"npx lint-staged || { echo 'Commit failed: lint-staged errors'; exit 1; }\" && chmod +x .husky/pre-commit",
    "postinstall": "echo '\n✅ KNI Cascade ready — Husky & lint-staged configured!\n'"
  },
  "author": "KNI",
  "license": "ISC",
  "dependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-purge-sourcemaps": "^1.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "http-server": "^14.1.1",
    "postcss": "^8.4.28",
    "sass": "^1.54.9",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "caniuse-lite": "^1.0.30001746",
    "gulp-insert": "^0.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.0.3",
    "postcss-pxv": "^2.0.0",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,md,mdx}": [
      "prettier --write"
    ]
  }
}
